


    <AuthorizeView>
        <Authorized>
            <MudSpacer />Good @partOfDay @context.User.FindFirst("DisplayName").Value.Split(" ").First(), Welcome to workspace.<MudSpacer/>
            
        </Authorized>
        <NotAuthorized>
            <MudSpacer/>Good @partOfDay, Welcome to workspace. <MudSpacer/>
        </NotAuthorized>
    </AuthorizeView>

@code {
    string partOfDay;
    protected override async Task OnInitializedAsync()
    {
        var hours = DateTime.Now.Hour;
        if (hours > 16)
        {
            partOfDay = "evening";
        }
        else if (hours > 11)
        {
            partOfDay = "afternoon";
        }
        else
        {
            partOfDay = "morning";
        }
    }

}
