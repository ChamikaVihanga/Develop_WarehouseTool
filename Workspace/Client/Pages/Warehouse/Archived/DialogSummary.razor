<MudDialog>
    <DialogContent>
        <MudTextField T="int" Label="Sap Number" Variant="Variant.Outlined" Mask="@(new PatternMask("00000"))" />
        <MudDatePicker PickerVariant="PickerVariant.Dialog" @bind-date="date"  Label="Select Date" DateFormat="dd/MM/yyyy" Variant="Variant.Outlined"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    DateTime? date = DateTime.Today;

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
