@inject IJSRuntime JsRuntime


<MudOverlay Visible="isVisible" DarkBackground="true" Absolute="true"></MudOverlay>
@code {

    private bool isVisible;
    [Parameter] public EventCallback<bool> bakErrorContent { get; set; }
    [Parameter] public string? Error { get; set; }


    protected override async Task OnInitializedAsync()
    {
        isVisible = true;
        await JsRuntime.InvokeVoidAsync("alert", $"{Error}");

        await bakErrorContent.InvokeAsync(true);
        isVisible = false;




    }


}
