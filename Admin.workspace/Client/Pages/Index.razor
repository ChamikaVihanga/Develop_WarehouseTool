@page "/"



<PageTitle>Workspace- Admin</PageTitle>

<MudText Typo="Typo.h3" Class="mt-3">Workspace Admin</MudText>

<MudText Typo="Typo.subtitle2" Class="mt-3">Welcome to the new Experience.</MudText>

<HelloWorkspace Title="Workspace solution v1.5.0" />

    <AuthorizeView Policy="ITOnly">
        <Authorized>
            <Counter StartNo="2"/>
        </Authorized>
    <NotAuthorized></NotAuthorized>
    
</AuthorizeView>


<MudGrid Class="mt-3">
    @for (int i = 0; i < 9; i++)
    {
        <MudItem xs="4" >
            <MudPaper Elevation="0">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="40px" Width="40px" />
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudSkeleton Animation="Animation.Wave" Width="100%" />
                            <MudSkeleton Animation="Animation.Wave" Width="100%" />
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="150px" />
                    <MudCardContent>
                        <MudSkeleton Animation="Animation.Wave" />
                    </MudCardContent>
                    <MudCardActions>
                        <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                        <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-3 mb-2" />
                    </MudCardActions>
                </MudCard>
            </MudPaper>
        </MudItem>
    }
</MudGrid>