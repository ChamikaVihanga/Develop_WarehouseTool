@page "/ErrorPage/{statusCode}"
@page "/ErrorPage"
@inject ISnackbar Snackbar

<MudText Color="Color.Error" Align="Align.Center" Typo="Typo.h2">Response status code does not indicate success: @statusCode</MudText>

@code {
    [Parameter]
    public string? statusCode { get; set; }

    protected override async Task OnInitializedAsync(){
        AddSnackbar();
    }

    public void AddSnackbar()
    {
        Snackbar.Add($"{statusCode}", Severity.Error);
    }

}
